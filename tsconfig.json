{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "types": [
      "node"
    ],
    "paths": {
      "@elizer/members": ["libs/members"],
      "@elizer/shared": ["libs/platform-shared"]
    },
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./libs/**/*"]
}
