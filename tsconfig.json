{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "paths": {
      "@elizer/gen": ["libs/generator"],
      "@elizer/members": ["libs/members"],
      "@elizer/shared": ["libs/platform-shared"],
      "@elizer/routes": ["libs/routes"],
      "@elizer/rxdb": ["libs/rxdb"],
      "@elizer/screwbox": ["libs/screwbox"],
      "@elizer/util": ["libs/util"]
    },
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./libs/**/*", "typings/**/*", "main.ts"]
}
